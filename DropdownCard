			<script>
				$(document).ready(function () {
					const darr = document.querySelectorAll('.d-arr').forEach((darr) => {					
						const pcard = darr.parentElement;
						const subcards = pcard.querySelector('.sub-cards');
						$(darr).click(function () {
							const icon = darr.querySelector('.fa');
						icon.classList.toggle('fa-arrow-up');
							$(subcards).slideToggle(300);
						});
					})

				});

			</script>
